@model IEnumerable<RecruitmentManagement.DAL.Vacancy>
@{
    ViewBag.Title = "Home Page";
}

@if (Model.Count() == 0)
{
    
    <div class="content">
        <div style="padding: 15px">
            <h4> No Vacancy Available</h4>
        </div>
    </div>
}
@foreach (var item in Model)
{
    var region = "";
    if (item.JobRegion == "1")
    {
        region = "South East";
    }
    if (item.JobRegion == "2")
    {
        region = "South South";
    }
    if (item.JobRegion == "3")
    {
        region = "South West";
    }
    if (item.JobRegion == "4")
    {
        region = "North East";
    }
    if (item.JobRegion == "5")
    {
        region = "North Central";
    }
    if (item.JobRegion == "6")
    {
        region = "North West";
    }


    <div class="content">
        <div style="padding: 20px">
            <h3>@item.Title</h3>
            <p>@item.JobLocation in <small>@region</small></p>
            <div class="col-md-4"><i class="fa fa-signal "></i> @item.Level</div>
            <div class="col-md-4"><i class="fa fa-book "></i>  @item.Qualification</div>
            <div class="col-md-4"><i class="fa fa-tags "></i> @item.EmploymentType</div> <br />
            
            @if (item.Description != null )
            {
                <h4> @item.Description.Substring(0, 150)...</h4>
            }
        </div>
        <div class="apply_div">
            <a href="@Url.Action("Vacancy", "Home", new { Id = item.Id})" class="btn btn-pal ">Details</a>
        </div>
    </div>
}


